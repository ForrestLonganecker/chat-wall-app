<% if(messages.error || messages.notice) { %>
  <div class="alert" role="alert">
    <% if(messages.error) { %>
      Validation errors:
      <ul>
        <% messages.error.forEach((err) => { %>
          <li><%= `${err.type} ${err.message}` %></li>
        <% }) %>
      </ul>
    <% } else { %>
<p><%= messages.notice %></p>
    <% } %>
  </div>
<% } %>